version: "0.1"
guardians:
  ethereum:
    networkType: ethereum
    network: kovan
    nodeEndpoint: wss://kovan.infura.io/ws/v3/16a5aa3a08c24d56b1586cd06b4055d5
    monitors:
      {{#each ethereum}}
      {{#each tokenNames}}
      {{../name}}-{{this}}:
        task: synthetic.pools
        arguments:
          poolId: '{{../id}}'
          tokenName: '{{this}}'
        actions:
          - method: ethereumLiquidate
            maxCollateralRatio: {{../maxCollateralRatio}}
      {{/each}}
      {{/each}}
